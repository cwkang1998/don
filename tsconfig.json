{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDirs": [
      "src/"
    ],
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}